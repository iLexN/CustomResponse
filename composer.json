{
    "name": "ilexn/custom-response",
    "type": "library",
    "description": "use PSR 17 Factory to create custom response helper",
    "keywords": [
        "PSR 7",
        "PSR 17",
        "HTTP Response"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "iLexN",
            "email": "ilex.job@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ilex\\CustomResponse\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ilex\\CustomResponse\\": "tests"
        }
    },
    "require": {
        "php": "^7.2",
        "psr/http-message": "^1.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.0",
        "phpstan/phpstan-phpunit": "^0.11.0",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "nyholm/psr7": "^1.1",
        "phpunit/phpunit": "^8.0",
        "symplify/easy-coding-standard": "^5.4",
        "zendframework/zend-diactoros": "^2.1",
        "ext-json": "*"
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "ecs check src tests",
        "cs-fix": "ecs check src tests --fix",
        "bug-check": "phpstan analyse -l max src tests"
    },
    "config": {
        "sort-packages": true
    }
}
